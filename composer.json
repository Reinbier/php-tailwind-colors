{
    "name": "reinbier/php-tailwind-colors",
    "description": "For using & generating TailwindCSS colors in Laravel",
    "keywords": [
        "reinbier",
        "laravel",
        "php-tailwind-colors"
    ],
    "homepage": "https://github.com/reinbier/php-tailwind-colors",
    "license": "MIT",
    "authors": [
        {
            "name": "reinbier",
            "email": "info@reinbier.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^10.0||^11.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.1.1||^7.10.0",
        "larastan/larastan": "^2.9",
        "orchestra/testbench": "^9.0.0||^8.22.0",
        "pestphp/pest": "^2.34",
        "pestphp/pest-plugin-arch": "^2.7",
        "pestphp/pest-plugin-laravel": "^2.3",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "Reinbier\\PhpTailwindColors\\": "src/",
            "Reinbier\\PhpTailwindColors\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Reinbier\\PhpTailwindColors\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-php-tailwind-colors --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Reinbier\\PhpTailwindColors\\PhpTailwindColorsServiceProvider"
            ],
            "aliases": {
                "PhpTailwindColors": "Reinbier\\PhpTailwindColors\\Facades\\PhpTailwindColors"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
